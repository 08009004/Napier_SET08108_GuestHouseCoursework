<Window x:Class="Program.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="349" Width="476">
    <Grid>
        <Button x:Name="btnNewBooking" Content="Create/Amend booking" HorizontalAlignment="Left" VerticalAlignment="Top" Width="136" RenderTransformOrigin="1.56,6.227" Margin="23,81,0,0" Click="btnNewBooking_Click"/>
        <Button x:Name="btnLoadBooking" Content="Load booking" HorizontalAlignment="Left" VerticalAlignment="Top" Width="136" Margin="23,54,0,0" Click="btnLoadBooking_Click"/>
        <TextBox x:Name="txtBookingRef" HorizontalAlignment="Left" Height="23" Margin="23,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblBookingRef" Content="Booking Number" HorizontalAlignment="Left" Margin="23,140,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblHeader" Content="Holiday Reservation System" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="124,10,0,0" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="lblCustomer" Content="Customer:" HorizontalAlignment="Left" Margin="210,46,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="lblCustName" Content="Name: " HorizontalAlignment="Left" Margin="205,109,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblCustNumber" Content="Customer Number:" HorizontalAlignment="Left" Margin="205,78,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtCustNumber" HorizontalAlignment="Left" Height="23" Margin="321,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtCustName" HorizontalAlignment="Left" Height="23" Margin="321,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblArrival" Content="Arrival Date:" HorizontalAlignment="Left" Margin="23,184,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblDeparture" Content="Departure Date:" HorizontalAlignment="Left" Margin="23,233,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtArrival" HorizontalAlignment="Left" Height="23" Margin="23,210,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtDeparture" HorizontalAlignment="Left" Height="23" Margin="23,259,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ListBox x:Name="lstGuests" HorizontalAlignment="Left" Height="89" Margin="219,193,0,0" VerticalAlignment="Top" Width="222"/>
        <Label x:Name="lblGuest" Content="List of guests:" HorizontalAlignment="Left" Margin="210,162,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Button x:Name="btnClearWindow" Content="Close booking" HorizontalAlignment="Left" VerticalAlignment="Top" Width="136" RenderTransformOrigin="1.56,6.227" Margin="23,109,0,0" Click="btnClearWindow_Click"/>

    </Grid>
</Window>
